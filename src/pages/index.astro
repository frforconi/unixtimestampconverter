---
import Layout from "../layouts/Layout.astro";
import LiveTimestamp from "../components/LiveTimestamp.vue";
import DateConverter from "../components/DateConverter.vue";
import WorldClock from "../components/WorldClock.vue";
---

<Layout title="Unix Timestamp Converter | Real-time Tools">
	<header class="hero">
		<!-- <img src="/logo.png" alt="Unix Time Converter Logo" class="site-logo" /> -->
		<h1>Unix <span class="text-gradient">Time</span> Converter</h1>
		<p class="subtitle">
			Real-time tools for developers and time travelers.
		</p>
	</header>

	<div class="islands-container">
		<!-- Central Hero Island -->
		<section class="island-main">
			<LiveTimestamp client:load />
		</section>

		<!-- Secondary Utility Islands -->
		<section class="island-secondary">
			<DateConverter client:visible />
			<WorldClock client:visible />
		</section>
	</div>
</Layout>

<style>
	.hero {
		text-align: center;
		margin-bottom: 4rem;
		margin-top: 2rem;
	}

	/* .site-logo {
		width: 120px;
		height: auto;
		margin-bottom: 1.5rem;
		border-radius: 20%;
		box-shadow: 0 0 30px rgba(124, 77, 255, 0.3);
		transition: transform 0.3s ease;
	}

	.site-logo:hover {
		transform: scale(1.05) rotate(2deg);
	} */

	h1 {
		font-size: 3.5rem;
		font-weight: 800;
		margin: 0;
		letter-spacing: -0.05rem;
		line-height: 1.1;
	}

	.text-gradient {
		background-image: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light))
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.subtitle {
		font-size: 1.2rem;
		color: #8b949e;
		margin-top: 1rem;
	}

	.islands-container {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		align-items: stretch;
		max-width: 80%;
		margin: auto;
	}

	.island-main {
		width: 100%;
	}

	.island-secondary {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	@media (min-width: 768px) {
		.islands-container {
			display: flex;
			flex-direction: column;
			gap: 2rem;
			align-items: stretch;
			max-width: 900px;
			margin: auto;
		}
		.island-main {
			width: 100%;
		}
		.island-secondary {
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
			gap: 2rem;
		}
	}
</style>
