---
import Layout from "../layouts/Layout.astro";
import LiveTimestamp from "../components/LiveTimestamp.vue";
import DateConverter from "../components/DateConverter.vue";
import WorldClock from "../components/WorldClock.vue";
import DelphiTimestamp from "../components/DelphiTimestamp.vue";
---

<Layout 
	title="Advanced Time Tools | Unix Timestamp & Epoch Converter"
	description="Precision time conversion tools for developers. Real-time Unix timestamp tracking, ISO 8601 formatting, World Clock synchronization, and Delphi TDateTime conversion."
>

	<header class="hero">
		<div class="hero-content">
			<h1>Unix Timestamp & <span class="text-gradient">Epoch</span> Converter</h1>
			<p class="subtitle">
				Precision tools for developers, systems engineers, and time travelers.
			</p>
		</div>
	</header>

	<div class="islands-container">
		<!-- Central Hero Island -->
		<section class="island-main">
			<LiveTimestamp client:load />
		</section>

		<!-- Secondary Utility Islands -->
		<section class="island-secondary">
			<DateConverter client:visible />
			<WorldClock client:visible />
			<DelphiTimestamp client:visible />
		</section>


	</div>

	<!-- Reset Settings Section -->
	<section class="reset-section">
		<button id="reset-settings" class="btn-reset">
			<span class="icon">üóëÔ∏è</span>
			Reset All Settings
		</button>
		<p class="reset-hint">Clears all local preferences and reloads the page.</p>
	</section>

<script>
	document.getElementById('reset-settings')?.addEventListener('click', () => {
		if (confirm('Are you sure you want to reset all settings? This will clear your saved preferences.')) {
			localStorage.clear();
			window.location.reload();
		}
	});
</script>
</Layout>

<style>
	.hero {
		text-align: center;
		margin-bottom: 4rem;
		margin-top: 3rem;
		position: relative;
	}

	.hero-content {
		position: relative;
		z-index: 1;
	}

	h1 {
		font-size: clamp(2.5rem, 8vw, 4.5rem);
		font-weight: 800;
		margin: 0;
		letter-spacing: -0.05rem;
		line-height: 1.1;
	}

	.text-gradient {
		background-image: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light))
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.subtitle {
		font-size: clamp(1rem, 3vw, 1.4rem);
		color: #8b949e;
		margin-top: 1.5rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.islands-container {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		align-items: stretch;
		max-width: 1000px;
		margin: auto;
	}

	.island-main {
		width: 100%;
		/* position: sticky; */
		/* top: 1rem; */
		/* z-index: 10; */
		/* transition: top 0.3s ease; */
	}

	.island-secondary {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	@media (min-width: 850px) {
		.island-secondary {
			grid-template-columns: 1fr 1fr;
		}
	}

	.reset-section {
		margin-top: 4rem;
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
	}

	.btn-reset {
		background: rgba(255, 107, 107, 0.1);
		border: 1px solid rgba(255, 107, 107, 0.3);
		color: #ff6b6b;
		padding: 0.8rem 1.5rem;
		border-radius: 8px;
		cursor: pointer;
		font-family: inherit;
		font-size: 0.9rem;
		font-weight: 600;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		transition: all 0.2s ease;
	}

	.btn-reset:hover {
		background: rgba(255, 107, 107, 0.2);
		border-color: rgba(255, 107, 107, 0.5);
		transform: translateY(-1px);
	}

	.reset-hint {
		font-size: 0.8rem;
		color: #6e7681;
		margin: 0;
	}
	
</style>
