<style>
	.terms-container {
		max-width: 850px;
		margin: 2rem auto;
		background: var(--card-bg);
		backdrop-filter: blur(20px);
		padding: 4rem;
		border-radius: 32px;
		border: 1px solid var(--card-border);
		line-height: 1.8;
		box-shadow: 0 20px 50px rgba(0,0,0,0.3);
	}

	.page-header {
		margin-bottom: 4rem;
		border-bottom: 1px solid var(--card-border);
		padding-bottom: 2rem;
	}

	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin-bottom: 0.5rem;
		letter-spacing: -0.02em;
	}

	.text-gradient {
		background: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.last-updated {
		color: #8b949e;
		font-size: 0.95rem;
	}

	.term-section {
		margin-bottom: 3rem;
	}

	h2 {
		color: #fff;
		font-size: 1.5rem;
		margin-bottom: 1rem;
		letter-spacing: -0.01em;
	}

	p {
		color: #8b949e;
		margin-bottom: 1.25rem;
	}

	ul {
		color: #8b949e;
		padding-left: 1.5rem;
		margin-bottom: 1.5rem;
	}

	li {
		margin-bottom: 0.5rem;
	}

	.back-link {
		margin-top: 4rem;
		border-top: 1px solid var(--card-border);
		padding-top: 2rem;
	}

	.back-link a {
		color: #8b949e;
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s;
	}

	.back-link a:hover {
		color: #fff;
	}

	@media (max-width: 768px) {
		.terms-container {
			padding: 2rem;
		}
		h1 {
			font-size: 2.2rem;
		}
	}
</style>
