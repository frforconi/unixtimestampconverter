---
interface Props {
	title: string;
	description?: string;
	image?: string;
	canonicalURL?: string;
}

const { 
	title, 
	description = "A fast, modern Unix Timestamp converter. Convert epoch time to human-readable dates (GMT & Local), view real-time world clocks, and generate timestamps for Delphi, C++, and more.",
	image = "/logo.png",
	canonicalURL = Astro.url.href
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />
		<meta property="og:site_name" content="Unix Timestamp Converter" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json" is:inline>
			{
				"@context": "https://schema.org",
				"@type": "WebApplication",
				"name": "Unix Timestamp Converter",
				"description": "Fast and modern real-time Unix Timestamp converter and world clock.",
				"applicationCategory": "DeveloperApplication",
				"operatingSystem": "All"
			}
		</script>

		<!-- <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1688192858896088" crossorigin="anonymous"></script>		 -->
		<meta name="google-adsense-account" content="ca-pub-1688192858896088">
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<div class="background-gradient"></div>
		<main>
			<slot />
		</main>
		<footer class="site-footer">
			<div class="footer-content">
				<div class="footer-info">
					<p>&copy; {new Date().getFullYear()} Unix Timestamp Converter</p>
					<p class="footer-tagline">Real-time tools for developers.</p>
				</div>
				<nav class="footer-nav">
					<a href="/">Home</a>
					<a href="/tools">Tools</a>
					<a href="/privacy">Privacy Policy</a>
				</nav>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 124, 77, 255;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--background: 13, 17, 23;
		--text-color: #e6edf3;
		--card-bg: rgba(255, 255, 255, 0.05);
		--card-border: rgba(255, 255, 255, 0.1);
	}
	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: rgb(var(--background));
		color: var(--text-color);
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		position: relative;
		overflow-x: hidden;
	}
	
	/* Beautiful animated background */
	.background-gradient {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		background: radial-gradient(circle at 50% 10%, rgba(var(--accent), 0.15) 0%, transparent 40%),
					radial-gradient(circle at 0% 100%, rgba(var(--accent-dark), 0.4) 0%, transparent 50%),
					radial-gradient(circle at 100% 100%, rgba(var(--accent), 0.1) 0%, transparent 50%);
		opacity: 0.8;
	}

	code, .mono {
		font-family: 'JetBrains Mono', monospace;
	}
	
	main {
		margin: 0 auto;
		padding: 2rem;
		/* width: 100%; */
		color: white;
		line-height: 1.6;
		max-width: 1200px;
		flex: 1;
	}

	.site-footer {
		margin-top: 4rem;
		padding: 3rem 2rem;
		border-top: 1px solid var(--card-border);
		background: rgba(0, 0, 0, 0.3);
		backdrop-filter: blur(10px);
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.footer-info p {
		margin: 0;
		color: #8b949e;
		font-size: 0.9rem;
	}

	.footer-tagline {
		font-size: 0.8rem !important;
		opacity: 0.7;
	}

	.footer-nav {
		display: flex;
		gap: 2rem;
	}

	.footer-nav a {
		color: #8b949e;
		text-decoration: none;
		transition: color 0.2s;
		font-size: 0.9rem;
	}

	.footer-nav a:hover {
		color: #fff;
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			gap: 1.5rem;
			text-align: center;
		}
		.footer-nav {
			gap: 1.5rem;
		}
	}
</style>
